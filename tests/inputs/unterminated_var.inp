@SET LATTICE 2.8595
@SET HP 1

&GLOBAL
   PROJECT NaCl
   RUN_TYPE ENERGY_FORCE
   PRINT_LEVEL MEDIUM
&END GLOBAL

&FORCE_EVAL
   METHOD Quickstep
   &DFT
      BASIS_SET_FILE_NAME  BASIS_MOLOPT
      BASIS_SET_FILE_NAME  BASIS_MOLOPT_UCL
      POTENTIAL_FILE_NAME  POTENTIAL

      UKS .TRUE.

      &QS
         METHOD GPW
         EXTRAPOLATION USE_GUESS
      &END QS

      &POISSON
         PERIODIC XYZ
      &END POISSON

      &SCF
         SCF_GUESS ATOMIC
         MAX_SCF 50
@IF $HP
         EPS_SCF 1.0E-8
@ENDIF
      &END SCF

@IF ${HP
      &KPOINTS
         SCHEME MONKHORST-PACK 8 8 8
         FULL_GRID .FALSE.
         SYMMETRY .FALSE.
      &END KPOINTS
@ENDIF
